@model ProductUpdateVM

<h1>Update</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InStock" /> @Html.DisplayNameFor(model => model.InStock)
                </label>
            </div>
            <div class="form-group col-md-4">
                <label for="3">Category</label>
                <select asp-for="CategoryId" asp-items="@new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.CategoryName))" id="3" class="form-control">
                    <option disabled selected>Choose category</option>
                </select>
            </div>
            <br />
            <div class="form-group col-md-4">
                <label for="4">Brand</label>
                <select asp-for="BrandId" asp-items="@new SelectList(Model.Brands, nameof(Brand.Id), nameof(Brand.BrandName))" id="4" class="form-control">
                    <option disabled selected>Choose type</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <label for="6">Color</label>
                <select asp-for="ColorId" asp-items="@new SelectList(Model.Colors, nameof(Color.Id), nameof(Color.ColorName))" id="6" class="form-control">
                    <option disabled selected>Choose Color</option>
                    @foreach (var color in Model.Colors)
                    {
                        var isSelected = Model.ColorId.HasValue && color.Id == Model.ColorId ? "selected" : "";
                        <option value="@color.Id" selected="@isSelected">
                            @color.ColorName
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="5">Type</label>
                <input multiple asp-for="Image" type="file" class="form-control img-input" id="5">
                <div class="img-preview-container">
                    @foreach (var imagePath in Model.CurrentImage)
                    {
                        <div class="img-preview">
                            <img src="@Url.Content(imagePath)" alt="Icon" style="width: 50px; height: 50px;" />
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/admin/assets/js/productUpdate.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
